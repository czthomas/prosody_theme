// global styles

*
    margin 0
    padding 0

body
    color #fff
    background #232323 url(../images/bg.jpg) repeat-x
    font-size 18px
    line-height 1em

body, select, textarea, input
    font 100% Arial, Verdana, Helvetica, sans-serif

a, a:visited
    color #A1A1A3
    text-decoration underline

a:hover, a:active
    color #c99a73

*:focus
    outline none

ol
    margin 15px

    ol
        margin 5px

    li
        margin-left 25px

blockquote
    background #242424 url(../images/quote.gif) no-repeat 10px 22px
    font italic 1.5em Georgia, "Times New Roman", Times, serif
    padding 22px 22px 22px 85px
    margin 15px 0 15px 20px
    border 1px solid #1c1c1c
    border-width 0 0 1px 3px

    p
        margin 0 0 15px

cite
    display block
    text-transform uppercase
    font-style normal
    font 0.6em Georgia, "Times New Roman", Times, serif
    padding 4px 0 4px 25px

hr
    clear both
    background #222224
    color #222224
    width 100%
    height 1px
    margin 15px 0
    border none
    display block


// header styles
header
    background url(../images/bg_wrapper.jpg) right no-repeat
    height 185px
    margin-top 22px

#logo
    margin-top 50px
    position relative

    img + img
        display none

#intro
    margin-top 30px
    height 100px
    font-size 1.2em

    p
        display inline

    #tagline
        background none
        padding 0

        a, a:visited
            text-indent -9000px
            display block
            height 50px
            background url(../images/tagline.gif) no-repeat
            margin-top 30px
            padding 0

nav
    font-size 1.4em
    height 39px
    overflow visible
    margin-top 10px

    li
        list-style none
        float left
        height 40px

        a, a:visited
            height 25px
            margin 0 15px 0 0
            display block
            float left
            padding 10px 20px 6px
            text-decoration none
            color #a1a0a0
            z-index 1000

            a:hover, a:focus
                background #2d2d2f url(../images/bg_nav.gif) repeat-x
                color #fff

.current-menu-item
    background #2d2d2f url(../images/bg_nav.gif) repeat-x

// Content div styles

.content
    padding-left 0
    padding-right 0

#main
    background #2d2d2f
    border-top 1px solid #444446
    padding 40px 0 50px
    z-index 1
    overflow visible

.poem-home
    border solid 10px #666
    position relative
    height 654px
    background-color #222222

.scrollfix
    overflow auto
    height 634px

// Poem styles

#poem
    padding-top 15px
    font-size 1.28em
    float left
    margin-left 25px
    width 90%
    overflow auto

    #poemtitle
        margin 10px 0 15px

        h2
            padding-bottom 10px
            line-height 1em

span.space_1
    margin-left 1em

small.date
    padding-left 1.5em
    font-size .6em
    vertical-align middle

div.prosody-shadowline
    display table-row
    height 18px

span:hover
    background #444

span.prosody-shadowsyllable
    display table-cell
    text-align center
    color #DEB887
    vertical-align bottom
    height 18px

span.prosody-shadowsyllable:hover
    background #444
    cursor pointer

span.prosody-placeholder, span.prosody-marker
    visibility hidden
    white-space pre


div.TEI-l
    line-height 1em

.buttons
    float right
    margin-top -1em

#poem span.button
    word-spacing 0
    letter-spacing 0

#poem .button button
    width 18px

button
    background none
    border 0
    color #fff
    padding 0
    margin 0
    cursor pointer

.prosody-note
    display none

.prosody-note-button
    display none


// Sidebar styles

#sidebar
    h2
        background url(../images/bg_hdr_sidebar.gif) 90px top no-repeat
        font 2.5em Georgia, "Times New Roman", Times, serif
        text-align right
        margin 0
        padding 20px 0 14px

    h3
        text-align right
        font 2em Georgia, "Times New Roman", Times, serif

.poem-sort-method
    color #fff
    display block
    height 40px
    background #19191b
    border 1px solid #19191b
    padding 0 24px
    text-align right
    line-height 40px
    font-weight normal
    font-family Arial, Verdana, Helvetica, sans-serif
    text-decoration none
    cursor pointer
    margin 0
    outline none
    border-bottom 1px solid #0b0b0d

.poem-results
    background-color #000
    padding 10px 10px 15px 15px
    font-size .9em
    color #fff
    max-height 350px
    overflow auto

    h4
        font-size 1.2em
        color #666
        border-bottom 1px solid #19191b
        padding 15px 2px

    ul
        margin-top -1px
        overflow auto

.titles
    list-style-type none

    li
        background url(../images/dashes.gif) bottom repeat-x
        padding 15px 2px

    a
        color #A1A1A3

//  Footer styles

footer
    background url('../images/bg_footer.gif') repeat-x
    padding-top 18px
    height 125px
    font-size 12px

    a, a:visited
        color #AFAFAF

    p
        margin 0

    #author_container a
        text-decoration underline

    #dept_container
        text-align right
        border-right 1px dotted #676767

    .scholars_lab_logo img
        padding-left 15px
        padding-top 15px

//  Glossary styles

#glossary

    margin-bottom 20px
    padding-bottom 20px

    p
        margin 15px 0
        line-height 150%

    h2
        font 2.8em Georgia, "Times New Roman", Times, serif
        background url(../images/bg_hdr.gif) left 8px no-repeat
        letter-spacing .05em
        padding 14px 0 10px

    dl
        margin 10px 0 20px
        overflow hidden

        .media
            padding-bottom 20px
            border-bottom 1px solid #222224

            dt
                padding 15px 20px 15px 0
                border-top none

            dd
                padding 0 20px
                border-top none

        dt
            width 25%
            float left
            padding 25px 20px 25px 0
            border-top 1px solid #222224
            text-align right
            clear both
            color #A1A1A3
            font 1.2em Georgia, "Times New Roman", Times, serif;
            text-transform uppercase

        dd
            float left
            width 75%
            padding 10px 20px
            border-top 1px solid #222224
            overflow hidden

            p
                font-size 1.2em

        dt.first, dd.first
            border-top none

//  Instructions sub page styles

#tabs
    background #2d2d2f
    border 0
    border-top 1px solid #3f3f41
    padding-top 10px
    font-size 1.3em

    span
        color #fff

    h2
        color #fff
        font Georgia, "Times New Roman," Times, serif
        background url(../images/bg_hdr.gif) left 8px no-repeat
        letter-spacing .05em
        padding 14px 0 10px
        line-height 1.8em
        margin-top 15px

    p
        color #fff
        margin 15px 0
        line-height 150%

    .ui-widget-header
        color #fff
        background #2d2d2f
        border 0

        .ui-state-active, .ui-state-default
            color #fff
            background #2d2d2f
            border 0

    .ui-state-active
        color #fff
        background #2d2d2f
        border 0

        a, a:link
            color #fff

    .ui-widget-content

        .ui-state-active, .ui-state-default
            color #fff
            background #2d2d2f
            border 0

    .ui-state-default
        color #fff
        background #2d2d2f
        border 0

#subnav
    float right

    li
        list-style none
        float left
        height 37px

        a
            height 25px
            margin 0 15px 0 0
            float left
            padding 10px 5px 6px 0
            font-size 1em
            color #a1a0a0

// Resource view styles

.poem_tabs
    margin-bottom 10px

    li
        display inline
        background #444
        padding 10px
        color white
        font-size 1.2em

        a
            text-decoration none

#poem_resources
    padding-top 15px
    margin-left 25px
    font-size 1.2em

    h2
        background url(../images/bg_hdr.gif) left 8px no-repeat
        font Georgia, "Times New Roman", Times, serif
        letter-spacing .05em
        padding 14px 0 10px
        line-height 2em
        font-size 1.8em
        margin-bottom 20px


