// global styles

color-highlight = #AD0C2F
color-midtone =   #d4daa8
color-key =       #d5e198
color-bgoff =     #b8a363
color-bg =        rgba(38, 39, 33, 1)

*
    margin 0
    padding 0

body
    color #ffffff
    background color-bg
    font-size 18px
    line-height 1em
    background url(../images/bg.jpg) color-bgoff

body, select, textarea, input
    // font 100% Arial, Verdana, Helvetica, sans-serif
    font 100% 'Open Sans', sans-serif

a, a:visited
    color #A1A1A3
    text-decoration none

a:hover, a:active
    color color-midtone

*:focus
    outline 0

ol
    margin 15px

    ol
        margin 5px

    li
        margin-left 25px

blockquote
    background bg-off url(../images/quote.gif) no-repeat 10px 22px
    font italic 1.5em Georgia, "Times New Roman", Times, serif
    padding 22px 22px 22px 85px
    margin 15px 0 15px 20px
    border 1px solid color-key
    border-width 0 0 1px 3px

    p
        margin 0 0 15px

cite
    display block
    text-transform uppercase
    font-style normal
    font .6em Georgia, "Times New Roman", Times, serif
    padding 4px 0 4px 25px

hr
    clear both
    background #222224
    color #222224
    width 100%
    height 1px
    margin 15px 0
    border 0
    display block

#main > .container > .row
    @media (min-width: 768px)
        display flex

.header
    background color-highlight
    width 100%
    margin none
    padding none 
    border-bottom 4px solid color-key

#logo
    margin-top 22px
    position relative

    img + img
        display none

#intro
    margin-top 30px
    height 100px
    font-size 1.2em

    p
        display inline

    #tagline
        background none
        padding 0
        display block
        height 50px
        margin-top 30px
        max-width 100%

        // a, a:visited
        //     text-indent -9000px
        //     display block
        //     height 50px
        //     background url(../images/tagline.gif) no-repeat
        //     margin-top 30px
        //     padding 0



nav
    font-size 1.6em
    height 39px
    overflow visible
    margin-top 10px
    text-align center
    font-family Georgia, serif
    font-style bold
    display inline

    .row
        background-color color-highlight
        padding-bottom 20px

    li
        display inline-block
        list-style none
        float none
        height 40px
        width 10em
        border 2px solid color-midtone
        border-radius 20px
        background-color color-bg

        a, a:visited
            height 25px
            margin 0 auto 0 auto
            display block
            float left
            padding 10px 20px 6px
            text-decoration none
            color color-midtone
            z-index 1000
            text-align center
            width 100%

            a:hover, a:focus
                background #2d2d2f url(../images/bg_nav.gif) repeat-x
                color #fff

.current-menu-item
    background-color color-bgoff

    a, a:visited
        color black

// Content div styles

.content
    padding-left 0
    padding-right 0

#main
    padding 40px 0 50px
    z-index 1
    overflow visible

.poem-home, .post-home
    padding 5px
    min-height 45vh
    background-color color-bg
    border-top 2px solid color-key

.poem-home
    @media (min-width: 768px)
        border-left 2px solid color-key
        border-bottom 2px solid color-key
        border-radius 20px 0 0 20px
    
    @media (min-width: 992px)
        margin-left 12.5%

.post-home
    padding 2em
    font-size 1.28em
    border-bottom 2px solid color-key
    margin auto

    @media (min-width: 768px)
        border 2px solid color-key
        border-radius 20px

.scrollfix
    width 100%

#poem_text
    display flex

// Poem styles

#poem
    padding-top 15px
    font-size 16px
    
    float left
    min-width 80%
    width 100%
    margin-left 25px
    flex auto

    #poemtitle
        margin 10px 0 0px

        h2
            padding-bottom 10px
            line-height 1em

h4
    margin-bottom 15px

span.space_1
    margin-left 1em

small.date
    padding-left 1.5em
    font-size .6em
    vertical-align middle

div.prosody-shadowline
    display table-row
    height 18px

div.prosody-line
    padding-top 6px

.prosody-syllable:hover, .prosody-shadowsyllable:hover
    background #444

div.TEI-l
    line-height 1em

.buttons
    float right
    margin-top -1em

#poem span.button
    word-spacing 0
    letter-spacing 0

#poem .button button
    width 18px

button
    background none
    border 0
    color #fff
    padding 0
    margin 0
    cursor pointer

.prosody-note
    display none
    color color-key
    font-size 1.4em
    line-height 1.5

.prosody-note-button
    display none

// Sidebar styles

#sidebar-container
    background-color color-bg
    border-top 2px solid color-key
    border-bottom 2px solid color-key
    padding-bottom 16px

    @media (min-width: 768px)
        border-right 2px solid color-key
        border-radius 0 20px 20px 0

#sidebar
    h2
        font 2.5em Georgia, "Times New Roman", Times, serif
        text-align center
        margin 0
        padding 20px 0 14px
        color color-key

    h3
        text-align center
        font 2em Georgia, "Times New Roman", Times, serif

.poem-sort-method
    display block
    height 40px
    padding 0 24px
    text-align center
    line-height 40px
    font-weight normal
    // font-family Arial, Verdana, Helvetica, sans-serif
    font-family 'Open Sans', sans-serif
    text-decoration none
    cursor pointer
    margin 0
    outline 0
    border-bottom 1px solid #0b0b0d
    background none

.poem-results
    padding 10px 10px 15px 15px
    font-size .9em
    color #fff
    max-height 30vh
    overflow auto

    h4
        // font-size 1.2em
        color color-key
        display block
        text-align center
        border-bottom 1px solid color-key
        padding 15px 2px

    ul
        margin-top -1px
        overflow auto

#accordion
    .ui-widget-content
        background none
        border none

        a
            color #ffffff

    .ui-accordion-header
        color color-key
        border none
        border-bottom 2px solid color-key
        margin-bottom 4px
        padding-right 1.5em
    
    .ui-icon
        background-image: url(images/ui-icons_dee8c5_256x240.png)

.titles
    list-style-type none

    li
        // background url(../images/dashes.gif) bottom repeat-x
        padding 15px 2px

    a
        display block
        color color-midtone
        text-align left

//  Footer styles

footer
    padding-top 18px
    padding-bottom 18px
    font-size 12px
    background-color color-highlight
    border-top 4px solid color-key

    a, a:visited, a:hover
        color black

    p
        margin 0

    #author_container a
        text-decoration underline

    #dept_container
        text-align right
        border-right 1px dotted #676767

    .scholars_lab_logo img
        padding-left 15px
        padding-top 15px
    
    .credits
        color black
        text-align center
        font-size 0.8em
    
    .credits:nth-child(odd)
        @media (min-width: 768px)
            text-align right
    .credits:nth-child(even)
        @media (min-width: 768px)
            text-align left

//  Glossary styles

#glossary

    margin-bottom 20px
    padding-bottom 20px

    p
        margin 15px 0
        line-height 150%

    h2
        font 2.8em Georgia, "Times New Roman", Times, serif
        background url(../images/bg_hdr.gif) left 8px no-repeat
        letter-spacing .05em
        padding 14px 0 10px

    dl
        margin 10px 0 20px
        overflow hidden

        .media
            padding-bottom 20px
            border-bottom 1px solid #222224

            dt
                padding 15px 20px 15px 0
                border-top none

            dd
                padding 0 20px
                border-top none

        dt
            width 25%
            float left
            padding 25px 20px 25px 0
            border-top 1px solid #222224
            text-align right
            clear both
            color #A1A1A3
            font 1.2em Georgia, "Times New Roman", Times, serif;
            text-transform uppercase

        dd
            float left
            width 75%
            padding 10px 20px
            border-top 1px solid #222224
            overflow hidden

            p
                font-size 1.2em

        dt.first, dd.first
            border-top none

//  Instructions sub page styles

#tabs
    background #2d2d2f
    border 0
    border-top 1px solid #3f3f41
    padding-top 10px
    font-size 1.3em

    span
        color #fff

    h2
        color #fff
        font 2.4em Georgia, "Times New Roman", Times, serif
        background url(../images/bg_hdr.gif) left 8px no-repeat
        letter-spacing .05em
        padding 14px 0 10px
        margin-top 15px

    p
        color #fff
        margin 15px 0
        line-height 150%

    .ui-widget-header
        color #fff
        background #2d2d2f
        border 0

        .ui-state-active, .ui-state-default
            color #fff
            background #2d2d2f
            border 0

    .ui-state-active
        color #fff
        background #2d2d2f
        border 0

        a, a:link
            color #fff

    .ui-widget-content

        .ui-state-active, .ui-state-default
            color #fff
            background #2d2d2f
            border 0

    .ui-state-default
        color #fff
        background #2d2d2f
        border 0

#subnav
    float right

    li
        list-style none
        float left
        height 37px

        a
            height 25px
            margin 0 15px 0 0
            float left
            padding 10px 5px 6px 0
            font-size 1em
            color #a1a0a0

// Styles for Rules of Thumb top level page
#rules-top
  background #2d2d2f
  border 0
  font-size 1.3em

  span
      color #fff

  h2
      color #fff
      font 2.4em Georgia, "Times New Roman", Times, serif
      background url(../images/bg_hdr.gif) left 8px no-repeat
      letter-spacing .05em
      padding 14px 0 10px
      margin-top 15px

  p
      color #fff
      margin 15px 0
      line-height 150%

// Resource view styles

.poem_tabs
    margin-bottom 10px

    li
        display inline
        background #444
        padding 10px
        color white
        font-size 1.2em

        a, a:visited
            text-decoration none
            color #a1a1a3

        a:hover, a:active
            color #c99a73


#poem_resources
    padding-top 15px
    margin-left 25px
    font-size 1.2em

    h2
        background url(../images/bg_hdr.gif) left 8px no-repeat
        font Georgia, "Times New Roman", Times, serif
        letter-spacing .05em
        padding 14px 0 10px
        line-height 2em
        font-size 1.8em
        margin-bottom 20px

// Styles for check meter popup box
#meter-select
  select
    color black

  option
    color black

.ui-widget-header
  background #19191b
  border 1px solid #19191b

.ui-dialog-title:hover
  background #19191b

// Styles from rhyme controls
#rhymegutter
    padding-bottom 2em

#rhymebar
    float left
    width 7px
    display flex
    flex-direction column

    .rhymespacer
        background linear-gradient(rgba(0,0,0,0) 80%, color-key)
    
    .rhymefield
        background color-key
        border-right 1px solid color-key
        flex-grow 1
        cursor pointer

        &:hover
            background #ddd

#rhyme
    height 0
    width 25px
    float left
    .lrhyme
        height 36px
        padding 0 4px
    .check
        padding 0 3px !important
    form
        background color-bg
        padding-bottom 10px
    input
        // width 9px
        background #656565
        height 16px
        width 14px
        margin 0
        padding 0 2px
        border 0
        color #fff
        font-size 10px
        &:hover
            background #888
    input#rhymecheck
        padding 0
        font-weight bold
        cursor pointer
        background #999
        color #222
        &:hover
            background #ddd
        &.right
            background #32cd32
        &.wrong
            background #b22222

#rhymeflag
    clear both
    float left
    width 32px
    background color-key
    border-right 1px solid #cfcfcf
    color black
    padding 1px
    cursor pointer
    font-size 9px
    &:hover
        background #fff

#rhymeform
    p
      height 36px

#utils
    float left
    width 100%
    position absolute
    bottom 4px
    background-color #00000000

    .inner-util
        background-color #00000000
        width 100%
        display inline-block
        margin auto
        text-align center

span.translation
    border 1px white dashed
    padding 0 2px 0 2px

div.translation
    border 1px white dashed
    margin 10px 0 10px 0
    padding 4px

    h2
        font-size 16px
    
    p
        margin-left 2em

#poem > div:last-child
    margin-bottom 40px